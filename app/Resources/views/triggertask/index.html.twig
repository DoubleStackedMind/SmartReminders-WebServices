{% extends 'base.html.twig' %}

{% block body %}
    <h1>Triggertasks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>State</th>
                <th>Dayofweek</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for triggerTask in triggerTasks %}
            <tr>
                <td><a href="{{ path('triggertask_show', { 'id': triggerTask.id }) }}">{{ triggerTask.id }}</a></td>
                <td>{{ triggerTask.title }}</td>
                <td>{{ triggerTask.description }}</td>
                <td>{{ triggerTask.state }}</td>
                <td>{{ triggerTask.dayofweek }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('triggertask_show', { 'id': triggerTask.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('triggertask_edit', { 'id': triggerTask.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('triggertask_new') }}">Create a new triggerTask</a>
        </li>
    </ul>
{% endblock %}
